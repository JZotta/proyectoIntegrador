<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="images/logo-mercado-liebre.png" />

	<title>Argento shirts</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>

<body>
	<%- include('partials/header') %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < datosProductos.length; i++) {%> 
				<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
						<a href="/product/detalle/<%= datosProductos[i].id %>">
							<figure class="product-box_image">
								<img src="<%= datosProductos[i].imagen %>" alt="camiseta">
							</figure>
							<article class="product-box_data">
								<h2><%= datosProductos[i].nombreDeProducto %></h2>
								<p><%= datosProductos[i].descripcion %></p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section> 
				</div>	
			<%} %>	

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>

</html>